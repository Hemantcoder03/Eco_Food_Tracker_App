<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.StartPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_75sdp"
            android:src="@drawable/burgar_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/deliver_happiness_along_with_food_nand_make_yourself_proud"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startPageNextBtn"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/green_btn_background"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_45sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/be_the_one_to_spread_humanity"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@+id/startPageNextBtn"
            app:layout_constraintStart_toStartOf="@+id/startPageNextBtn"
            app:layout_constraintTop_toBottomOf="@+id/startPageNextBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>