<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/start_background_image"
    tools:context=".SelectTypeStartActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userBtn"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/green_btn_gradient"
        android:elevation="@dimen/_18sdp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/be_a_recipient"
        android:textAlignment="center"
        android:textSize="@dimen/_18sdp"
        android:layout_margin="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/donorBtn"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/donor_button"
        android:elevation="@dimen/_18sdp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/be_a_donor"
        android:textAlignment="center"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>