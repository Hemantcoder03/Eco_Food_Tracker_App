<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".donor.ui.fragments.DonorHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:id="@+id/donorAddFoodBtn"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/donorcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/alt_add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/add_food"
                android:textColor="@color/donorColor"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:id="@+id/donorRemoveFoodBtn"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/donorcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/alt_add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/remove_food"
                android:textColor="@color/donorColor"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:id="@+id/donorModifyFoodBtn"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/donorcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/alt_add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/modify_food"
                android:textColor="@color/donorColor"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:id="@+id/donorHistoryFoodBtn"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/donorcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/alt_add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/history"
                android:textColor="@color/donorColor"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:id="@+id/donorRewardsFoodBtn"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/donorcard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/alt_add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/rewards"
                android:textColor="@color/donorColor"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </GridLayout>
    </ScrollView>

</FrameLayout>